{
  "name": "coopwise-keep-alive",
  "version": "1.0.0",
  "description": "Keep-alive service to prevent Render backend from sleeping on free tier",
  "main": "keepAlive.js",
  "type": "module",
  "scripts": {
    "start": "node keepAlive.js",
    "dev": "node keepAlive.js",
    "pm2:start": "pm2 start keepAlive.js --name coopwise-keep-alive",
    "pm2:stop": "pm2 stop coopwise-keep-alive",
    "pm2:restart": "pm2 restart coopwise-keep-alive",
    "pm2:logs": "pm2 logs coopwise-keep-alive"
  },
  "dependencies": {
    "node-cron": "^3.0.3",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  },
  "keywords": [
    "keep-alive",
    "render",
    "ping",
    "cron",
    "coopwise"
  ],
  "author": "CoopWise Team",
  "license": "MIT"
} 